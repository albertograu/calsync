# CalSync Claude - Environment Secrets (example)
# Copy to `.env` and fill in your credentials before running Docker.

# Google Calendar API
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# iCloud (CalDAV)
# Use an app-specific password, not your main iCloud password.
ICLOUD_USERNAME=
ICLOUD_PASSWORD=

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Sync behavior (used by docker-compose to feed SYNC_CONFIG__*)
SYNC_INTERVAL_MINUTES=30
MAX_EVENTS_PER_SYNC=1000
SYNC_PAST_DAYS=30
SYNC_FUTURE_DAYS=365

# Optional: override default paths inside container
#DATA_DIR=/data
#CREDENTIALS_DIR=/credentials


